extends layout

block content
    div(class="row justify-content-center mt-3")
        h3="莊家"

    div(class="row justify-content-center")
        div.col-auto
            img(src="images/cards/empty.gif")

    div(class="row justify-content-center mt-5")
        div.col-auto
            img(src="images/cards/b1fv.gif")

    div(class="row justify-content-center mt-5")
        div(class="col player-area")
            div(class="row justify-content-center card-row")
                img(src="images/cards/empty.gif")
            div(class="row justify-content-center")
                h5(class="player-name")="name"
            div(class="row justify-content-center")
                button(class="btn btn-primary join-game" data-pos=0)="加入"
                button(class="btn btn-primary on-load hide" data-pos=0)="準備"
                button(class="btn btn-primary bet-btn hide" data-pos=0)="下注"
            div(class="row justify-content-center")
                div.col-auto
                    input(type="number" class="form-control bet-input" value="100")
        div(class="col player-area")
            div(class="row justify-content-center card-row")
                img(src="images/cards/empty.gif")
            div(class="row justify-content-center")
                h5(class="player-name")="name"
            div(class="row justify-content-center")
                button(class="btn btn-primary join-game" data-pos=1)="加入"
                button(class="btn btn-primary on-load hide" data-pos=1)="準備"
                button(class="btn btn-primary bet-btn hide" data-pos=0)="下注"
            div(class="row justify-content-center")
                div.col-auto
                    input(type="number" class="form-control bet-input" value="100")
        div(class="col player-area")
            div(class="row justify-content-center card-row")
                img(src="images/cards/empty.gif")
            div(class="row justify-content-center")
                h5(class="player-name")="name"
            div(class="row justify-content-center")
                button(class="btn btn-primary join-game" data-pos=2)="加入"
                button(class="btn btn-primary on-load hide" data-pos=2)="準備"
                button(class="btn btn-primary bet-btn hide" data-pos=0)="下注"
            div(class="row justify-content-center")
                div.col-auto
                    input(type="number" class="form-control bet-input" value="100")
        div(class="col player-area")
            div(class="row justify-content-center card-row")
                img(src="images/cards/empty.gif")
            div(class="row justify-content-center")
                h5(class="player-name")="name"
            div(class="row justify-content-center")
                button(class="btn btn-primary join-game" data-pos=3)="加入"
                button(class="btn btn-primary on-load hide" data-pos=3)="準備"
                button(class="btn btn-primary bet-btn hide" data-pos=0)="下注"
            div(class="row justify-content-center")
                div.col-auto
                    input(type="number" class="form-control bet-input" value="100")
        div(class="col player-area")
            div(class="row justify-content-center card-row card-row-5")
                img(src="images/cards/empty.gif")
                img(class="position-absolute", src="images/cards/c1.gif")
                img(class="position-absolute", src="images/cards/c2.gif")
                img(class="position-absolute", src="images/cards/c3.gif")
                img(class="position-absolute", src="images/cards/c4.gif")
                img(class="position-absolute", src="images/cards/c5.gif")
            div(class="row justify-content-center")
                h5(class="player-name")="name"
            div(class="row justify-content-center")
                button(class="btn btn-primary join-game" data-pos=4)="加入"
                button(class="btn btn-primary on-load hide" data-pos=4)="準備"
                button(class="btn btn-primary bet-btn hide" data-pos=0)="下注"
            div(class="row justify-content-center")
                div.col-auto
                    input(type="number" class="form-control bet-input" value="100")
